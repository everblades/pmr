<div id="page">
    <article>
      <%= yield %>
    </article>
    <div id="asidecontainer">
      <div id="asideflexcontainer">
        <aside>
          <div class="social">
              <div class="g-plusone" data-size="medium" data-annotation="bubble" data-width="240"></div>
