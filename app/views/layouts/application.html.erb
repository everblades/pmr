      ga('create', 'UA-32113251-1', 'auto');
      ga('send', 'pageview');

  </script>
</head>
<body>

<% if notice %>
    <p class="notice"><%= notice %></p>
<% elsif alert %>
    <p class="alert"><%= alert %></p>
<% end %>

<header>
