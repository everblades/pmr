<%= form_for @post, html: {multipart: true} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if !@post.photo? %>
      <div class="field">
        <%= f.label :photo %><br>
        <%= f.file_field :photo %><br>
        <%= f.label :caption %><br>
        <%= f.text_area :caption, cols: 40, rows: 5, maxlength: 160 %>
      </div>
  <% else %>
      <div class="field">
        <%= image_tag @post.photo.url %><br>
        <p>Upload New Photo:</p><br>
        <%= f.file_field :photo %><br>
        <%= f.label :caption %><br>
        <%= f.text_area :caption, cols: 40, rows: 5, maxlength: 160 %>
      </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, size: 80 %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, cols: 80, rows: 40 %>
  </div>
  <div class="field">
    <%= f.label :excerpt %><br>
    <%= f.text_area :excerpt, cols: 40, rows: 5, maxlength: 160 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
